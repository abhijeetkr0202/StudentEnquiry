<%- include ('..\\views\\partials\\header')%>
<div class="ui main text container segment">
    <div class="ui huge header">Edit Student data</div>
        <form class="ui form"  method="post">
            <div class="field">
                <label>USN</label>
                <input type="text" readonly maxlength="10" onkeyup="this.value = this.value.toUpperCase();" required name="studentusn" placeholder="USN" value="<%=resultedit.rows[0][0]%>">
            </div>
            <div class="field">
                <label>Name</label>
                <input type="text"  maxlength="25" onkeyup="this.value = this.value.toUpperCase();" required name="studentname" placeholder="Name" value="<%=resultedit.rows[0][1]%>">
            </div>
            <div class="field">
                <label>Branch</label>
                <input type="text"  maxlength="3" onkeyup="this.value = this.value.toUpperCase();" required name="studentbranch" placeholder="Branch" value="<%=resultedit.rows[0][2]%>">
            </div>
            <div class="field">
                <label>Course</label>
                <input type="text"  maxlength="5" onkeyup="this.value = this.value.toUpperCase();" required name="studentcourse" placeholder="Course" value="<%=resultedit.rows[0][3]%>">
            </div>
            <div class="field">
                <label>Gender</label>
                <input type="text"  maxlength="1" onkeyup="this.value = this.value.toUpperCase();" required name="studentgender" placeholder="Gender" value="<%=resultedit.rows[0][4]%>">
            </div>
            <div class="field">
                <label>Semester</label>
                <input type="number"  maxlength="1" onkeyup="this.value = this.value.toUpperCase();" required name="studentsemester" placeholder="Semester" value="<%=resultedit.rows[0][5]%>">
            </div>
            <div class="field">
                <label>Passing Year</label>
                <input type="text"  maxlength="4" onkeyup="this.value = this.value.toUpperCase();" required name="studentpassingyear" placeholder="Passing Year" value="<%=resultedit.rows[0][6]%>">
            </div>
            <div class="field">
                <label>GPA</label>
                <input type="number" step="0.01" onkeyup="this.value = this.value.toUpperCase();" required name="studentgpa" placeholder="GPA" value="<%=resultedit.rows[0][7]%>">
            </div>
            <div class="field">
                <label>12th Percentage</label>
                <input type="number"  step="0.01" maxlength="5" onkeyup="this.value = this.value.toUpperCase();" required name="studentpercentage" placeholder="Enter Marks obtained in PUC" value="<%=resultedit.rows[0][8]%>">
            </div>
            <div class="field">
                <label>Email</label>
                <input type="text"  maxlength="25" required name="studentemail" placeholder="Email" value="<%=resultedit.rows[0][9]%>">
            </div>
            <div class="field">
                <label>Date of Birth</label>
                <span><input type="date"  maxlength="10" required name="studentdob" placeholder="Date of Birth" value="<%=resultedit.rows[0][10].toISOString().slice(0,10)%>">(MM/DD/YYYY)</span>
            </div>
            <div class="field">
                <label>Blood Group</label>
                <input type="text"  maxlength="3" onkeyup="this.value = this.value.toUpperCase();" required name="studentbloodgroup" placeholder="BloodGroup" value="<%=resultedit.rows[0][11]%>">
            </div>
            <div class="field">
                <label>Nationality</label>
                <input type="text"  maxlength="15" onkeyup="this.value = this.value.toUpperCase();" required name="studentnationality" placeholder="Nationality" value="<%=resultedit.rows[0][12]%>">
            </div>
            <div class="field">
                <label>Father's Name</label>
                <input type="text"  maxlength="15" onkeyup="this.value = this.value.toUpperCase();" required name="studentfathersname" placeholder="Father's Name" value="<%=resultedit.rows[0][13]%>">
            </div>
            <div class="field">
                <label>Mother's Name</label>
                <input type="text"  maxlength="15" onkeyup="this.value = this.value.toUpperCase();" required name="studentmothersname" placeholder="Mother's Name" value="<%=resultedit.rows[0][14]%>">
            </div>
            <div class="field">
                <label>Student's Contact Number</label>
                <input type="text"  maxlength="10" onkeyup="this.value = this.value.toUpperCase();" required name="studentcontact" placeholder="student's Contact Number" value="<%=resultedit.rows[0][15]%>">
            </div>
            <div class="field">
                <label>Parent's Contact Number</label>
                <input type="text"  maxlength="10" onkeyup="this.value = this.value.toUpperCase();" required name="studentparentcontact" placeholder="Parents Contact Number" value="<%=resultedit.rows[0][16]%>">
            </div>
            <div class="field">
                <label>Address</label>
                <input type="text"  maxlength="30" onkeyup="this.value = this.value.toUpperCase();" required name="studentaddress" placeholder="Address" value="<%=resultedit.rows[0][17]%>">
            </div>
            <div class="field">
                <label>Parent's Income</label>
                <input type="number"  maxlength="15" onkeyup="this.value = this.value.toUpperCase();" required name="studentincome" placeholder="Income" value="<%=resultedit.rows[0][18]%>">
            </div>
        

           
            
            
            <input class="ui blue big basic button" type="submit">
        </form>
    <p>
        *All fields except USN can be edited (To change USN fill the form again) <br>
        *All fields are required
    </p>
    </div>
<%- include ('..\\views\\partials\\footer')%>